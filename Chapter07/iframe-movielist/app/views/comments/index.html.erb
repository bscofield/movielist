<h1>Listing comments</h1>

<table>
  <tr>
    <th>Movie</th>
    <th>User</th>
    <th>Text</th>
    <th>&nbsp;</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.movie.title %></td>
    <td><%=h comment.user_id %></td>
    <td><%=h comment.text %></td>
    <td><%= link_to 'Destroy', movie_comment_path(comment.movie, comment), {
      :confirm => 'Are you sure?', :method => :delete
    } %></td>
  </tr>
<% end %>
</table>
