<h1>New movie</h1>

<%= error_messages_for :movie %>

<% form_for @movie, :html => {:multipart => true} do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Rating</b><br />
    <%= f.text_field :rating %>
  </p>
  
  <p>
    <b>Image</b><br />
    <%= f.file_field :uploaded_data %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', movies_path %>
